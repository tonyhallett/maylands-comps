{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "package-lock.json",
      "package.json",
      "tsconfig.json",
      "eslint.config.mjs",
      "**/.*",
      "**/node_modules/**",
      ".github/workflows/**",
      ".husky/**",
      ".parcel-cache/**",
      "dist/**",
      "src/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
